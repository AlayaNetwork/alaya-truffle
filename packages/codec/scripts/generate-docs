#!/bin/bash

# bin
typedoc=../../node_modules/@gnd/typedoc/bin/typedoc

DIST_HTML=./dist/docs
DIST_JSON=./dist/api.json

TSCONFIG=./docs/tsconfig.json
OPTIONS=./docs/typedoc.json
CODEC=../codec/lib/index.ts
DECODER=../decoder/lib/index.ts
README=./docs/README.md
MEDIA=./docs/media

rm -rf $DIST_HTML $DIST_JSON

$typedoc \
    --options $OPTIONS \
    --tsconfig $TSCONFIG \
    --readme $README \
    --out $DIST_HTML \
    --json $DIST_JSON \
    --media $MEDIA \
  $CODEC $DECODER # entrypoints to display
