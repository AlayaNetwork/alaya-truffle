{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es2017"],
    "paths": {},
    "rootDir": ".",
    "typeRoots": [
      "./typings",
      "node_modules/@types",
      "../../node_modules/@types/mocha",
      "../../node_modules/@types/node"
    ]
  },
  "include": [
    "./**/*.ts",
    "./typings/**/*.d.ts"
  ]
}
